\RequirePackage[acronyms,symbols,toc,section=chapter]{glossaries}%
%
%% Create a new symbol
%% #1 the symbold ID
%% #2 the symbol text
%% #3 the symbol sort key
%% #4 the symbol description
\protected\gdef\newSymbol#1#2#3#4{%
\newglossaryentry{#1}{%
type={symbols},
name={#2},%
sort={#3},%
description={#4}%
}%
\expandafter\protected\expandafter\gdef\csname#1\endcsname{\gls{#1}}}%
%
